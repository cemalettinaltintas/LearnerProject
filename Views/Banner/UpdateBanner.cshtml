@model LearnerProject.Models.Entities.Banner
@{
    ViewBag.Title = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h3>Kategori Güncelleme Sayfası</h3>

<form method="post">
    @Html.HiddenFor(x => x.BannerId)
    <label>Banner İçeriği</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <button class="btn btn-outline-primary">Kaydet</button>
</form>