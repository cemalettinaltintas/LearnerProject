@model List<LearnerProject.Models.Entities.FAQ>
@{
    ViewBag.Title = "DefaultSSS";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="untree_co-hero overlay" style="background-image: url('/Templates/learner-1.0.0/images/img-school-2-min.jpg')">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-12">
                <div class="row justify-content-center ">
                    <div class="col-lg-6 text-center ">
                        <h1 class="mb-4 heading text-white" data-aos="fade-up" data-aos-delay="100">Sık Sorulan Sorular</h1>
                        <div class="mb-5 text-white desc mx-auto" data-aos="fade-up" data-aos-delay="200">
                            <p>Kurslarımız hakkındaki sorularınızı ilgili kursa kaydolduktan sonra yönetim panelinizden kursun yorum kısmına yazabilirsiniz.</p>
                        </div>
                        <p class="mb-0" data-aos="fade-up" data-aos-delay="300"><a href="#sss" class="btn btn-secondary">Git</a></p>
                    </div>
                </div>
            </div>
        </div>
</div>  
</div>  

<div id="sss" class="untree_co-section" style="margin-top:60px">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 mr-auto mb-5 mb-lg-0" data-aos="fade-up" data-aos-delay="0">
                <img src="/Templates/learner-1.0.0/images/img-school-5-min.jpg" alt="image" class="img-fluid">
            </div>
            <div class="col-lg-7 ml-auto" data-aos="fade-up" data-aos-delay="100">
                @{
                    var count = 0;
                }
                <div class="custom-accordion" id="accordion_1">
                    @foreach (var item in Model)
                    {
                        count++;
                        string a = "collapse" + count.ToString();
                        <div class="accordion-item">
                            <h2 class="mb-0">
                                <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#@a" aria-expanded="true" aria-controls="@a">@item.Question</button>
                            </h2>

                            <div id="@a" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion_1">
                                <div class="accordion-body">
                                    <div class="d-flex">
                                        <div class="accordion-img mr-4">
                                            <img src="@item.ImageUrl" alt="Image" class="img-fluid">
                                        </div>
                                        <div>
                                            <p>@item.Answer</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div> <!-- .accordion-item -->
                    }
                </div>

            </div>
        </div>
    </div>
</div> <!-- /.untree_co-section -->