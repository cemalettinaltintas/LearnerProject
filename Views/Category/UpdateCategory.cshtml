@model LearnerProject.Models.Entities.Category
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Kategori Güncelleme Sayfası</h3>

<form method="post">
    @Html.HiddenFor(x=>x.CategoryId)
    <label>Kategori Adı</label>
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    <label>Kategori Icon</label>
    @Html.TextBoxFor(x => x.Icon, new { @class = "form-control" })
    <button class="btn btn-outline-primary">Kaydet</button>
</form>