@model LearnerProject.Models.Entities.Student
@{
    ViewBag.Title = "UpdateStudent";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<br />
<h4>Öğrenci Ekleme Sayfası</h4>
<br />
<form method="post">
    @Html.HiddenFor(x=>x.StudentId)
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control mb-3", @placeholder = "Adı Soyadı" })

    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control mb-3", @placeholder = "Kullanıcı Adı" })

    @Html.TextBoxFor(x => x.Password, new { @class = "form-control mb-3", @placeholder = "Şifre", @type = "password" })
    <button class="btn btn-outline-success"><i class="fas fa-edit"> Güncelle</i></button>
</form>