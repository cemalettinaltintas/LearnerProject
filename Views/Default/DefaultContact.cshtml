@model LearnerProject.Models.Entities.Message
@{
    ViewBag.Title = "DefaultContact";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="untree_co-hero overlay" style="background-image: url('/Templates/learner-1.0.0/images/img-school-2-min.jpg');">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-12">
                <div class="row justify-content-center ">
                    <div class="col-lg-6 text-center ">
                        <h1 class="mb-4 heading text-white" data-aos="fade-up" data-aos-delay="100">Bizimle İletişime Geçin</h1>
                        <div class="mb-5 text-white desc mx-auto" data-aos="fade-up" data-aos-delay="200">
                            <p>Another free template by <a href="https://untree.co/" target="_blank" class="link-highlight">Untree.co</a>. Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live.</p>
                        </div>

                        <p class="mb-0" data-aos="fade-up" data-aos-delay="300"><a href="#contact" class="btn btn-secondary">Mesaj Gönder</a></p>

                    </div>


                </div>

            </div>

        </div> <!-- /.row -->
    </div> <!-- /.container -->

</div> <!-- /.untree_co-hero -->




<div id="contact" class="untree_co-section">
    <div class="container">

        <div class="row mb-5">
            <div class="col-lg-4 mb-5 order-2 mb-lg-0" data-aos="fade-up" data-aos-delay="100">
                <div class="contact-info">

                    <div class="address mt-4">
                        <i class="icon-room"></i>
                        <h4 class="mb-2">Adres:</h4>
                        <p>@ViewBag.address</p>
                    </div>

                    <div class="open-hours mt-4">
                        <i class="icon-clock-o"></i>
                        <h4 class="mb-2">Çalışma Saatleri:</h4>
                        <p>
                            @ViewBag.openHours
                        </p>
                    </div>

                    <div class="email mt-4">
                        <i class="icon-envelope"></i>
                        <h4 class="mb-2">Email:</h4>
                        <p>@ViewBag.email</p>
                    </div>

                    <div class="phone mt-4">
                        <i class="icon-phone"></i>
                        <h4 class="mb-2">Telefon:</h4>
                        <p>@ViewBag.phone</p>
                    </div>

                </div>
            </div>
            <div class="col-lg-7 mr-auto order-1" data-aos="fade-up" data-aos-delay="200">
                <form method="post" action="DefaultSendMessage">
                    <div class="row">
                        <div class="col-6 mb-3">
                            <input type="text" name="NameSurname" class="form-control" placeholder="Adınız Soyadınız">
                        </div>
                        <div class="col-6 mb-3">
                            <input type="email" name="Email" class="form-control" placeholder="E-posta Adresiniz">
                        </div>
                        <div class="col-12 mb-3">
                            <input type="text" name="Subject" class="form-control" placeholder="Konu">
                        </div>
                        <div class="col-12 mb-3">
                            <textarea name="MessageContent" id="" cols="30" rows="7" class="form-control" placeholder="Mesajınız"></textarea>
                        </div>

                        <div class="col-12">
                            <input type="submit" value="Mesaj Gönder" class="btn btn-primary">
                        </div>
                    </div>
                </form>
            </div>
        </div>


    </div>
</div> <!-- /.untree_co-section -->
